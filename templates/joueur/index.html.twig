{% extends 'base.html.twig' %}

{% block title %}Tournois de Foot{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <nav>
        <ul>
            <a href="{{ path('app_home') }}">‚Üê Home</a>
        </ul>
    </nav>

<div class="example-wrapper">

<h1>Liste des Joueurs</h1>
   <nav>
        <ul>
            <a href="{{ path('app_joueur_create') }}">Ajouter un Joueur</a>
        </ul>
        <ul>
            <a href="{{ path('app_statistique_create') }}">Ajouter des Stats</a>
        </ul>
        <br>
    </nav>


    {% for joueur in joueurs %}
        <ul>
            <li>Nom : {{joueur.nom}}</li>
            <li>Prenom : {{joueur.prenom}}</li>
            <li>Taille : {{joueur.taille}} cm</li>
            <li>Poste : {{joueur.poste}}</li>
            <li>Equipe :  {{joueur.equipe}}</li>
            <form action="{{ path('app_joueurs_id', {"joueurs": joueur.id}) }}" method="post">
                <button type="submit">Afficher Statistique</button>
            </form>
            <br>
        </ul>
    {% endfor %}
</div>
{% endblock %}
