{% extends 'base.html.twig' %}

{% block title %}Hello MatchsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% for match in matchs %}

            <li>Match : {{match.equipeDom}} - {{match.equipeExt}}</li>
            <li>Resultat : {{match.ScoreDom}} - {{match.ScoreExt}}</li>
            <li>Date : {{match.date|date('d/m/Y')}}</li>
            <li>Nom Stade : {{stade.nomstade}}</li>
            <li>Lieu : {{stade.localisation}}</li>
            

    {% endfor %}
    
</div>
{% endblock %}
